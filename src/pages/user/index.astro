---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="User Dashboard | UU MEMO">
    <Header />

    <main class="max-w-4xl mx-auto px-6 py-20 min-h-[60vh]">
        <!-- Loading State -->
        <div
            id="auth-loading"
            class="flex flex-col items-center justify-center py-20 space-y-4"
        >
            <div
                class="w-12 h-12 border-4 border-uu-sub border-t-uu-main rounded-full animate-spin"
            >
            </div>
            <p class="text-uu-main/60 tracking-widest text-sm">LOADING...</p>
        </div>

        <!-- Login Section -->
        <div
            id="login-section"
            class="hidden max-w-md mx-auto bg-uu-light p-10 rounded-2xl shadow-sm border border-uu-sub text-center"
        >
            <h2 class="text-2xl font-bold mb-4 font-logo text-uu-dark">
                開啟你的專屬 MEMO
            </h2>
            <p class="text-uu-main/60 mb-8 text-sm leading-relaxed">
                把那些轉瞬即逝的思考，留在這個安靜的角落。
            </p>

            <button
                id="google-login-btn"
                class="w-full bg-white border border-uu-sub hover:border-uu-main hover:bg-uu-base/30 text-uu-dark font-medium py-3 px-4 rounded-xl transition-all duration-300 flex items-center justify-center gap-3 group mb-6"
            >
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path
                        d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                        fill="#4285F4"></path>
                    <path
                        d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                        fill="#34A853"></path>
                    <path
                        d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                        fill="#FBBC05"></path>
                    <path
                        d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                        fill="#EA4335"></path>
                </svg>
                <span>使用 Google 帳戶繼續</span>
            </button>

            <div
                class="flex items-center justify-center gap-1.5 text-uu-main/40 hover:text-uu-main/60 transition-colors"
            >
                <span class="material-symbols-outlined text-sm">info</span>
                <a
                    href="/privacy"
                    class="text-[11px] underline underline-offset-2 decoration-uu-sub/50"
                    >隱私權條款</a
                >
            </div>
        </div>

        <!-- User Dashboard -->
        <div id="user-dashboard" class="hidden">
            <!-- User Header -->
            <div
                class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 pb-6 border-b border-uu-sub/50 gap-4"
            >
                <div class="flex items-center gap-4">
                    <div
                        id="user-avatar"
                        class="w-16 h-16 bg-uu-sub/50 rounded-full flex items-center justify-center overflow-hidden border-2 border-uu-light shadow-sm"
                    >
                        <span
                            class="material-symbols-outlined text-uu-light text-2xl"
                            >person</span
                        >
                    </div>
                    <div>
                        <h1
                            class="text-2xl font-bold font-logo text-uu-dark mb-1"
                        >
                            Hi, <span id="user-name">User</span>
                        </h1>
                        <p
                            id="user-email"
                            class="text-xs text-uu-main/60 tracking-wider font-mono"
                        >
                        </p>
                    </div>
                </div>
                <button
                    id="logout-btn"
                    class="btn-text text-xs tracking-widest text-uu-main/60 hover:text-uu-dark"
                >
                    登出 account
                </button>
            </div>

            <!-- Tabs Navigation -->
            <div
                class="flex gap-8 border-b-2 border-uu-sub/20 mb-8 overflow-x-auto no-scrollbar"
            >
                <button
                    class="tab-btn active pb-3 text-sm font-bold tracking-widest text-uu-dark border-b-2 border-uu-main -mb-[2px] transition-colors whitespace-nowrap"
                    data-tab="bookmarks"
                >
                    我的書籤
                </button>
                <button
                    class="tab-btn pb-3 text-sm font-medium tracking-widest text-uu-main/50 hover:text-uu-main border-b-2 border-transparent -mb-[2px] transition-colors whitespace-nowrap"
                    data-tab="comments"
                >
                    留言管理
                </button>
                <button
                    class="tab-btn pb-3 text-sm font-medium tracking-widest text-uu-main/50 hover:text-uu-main border-b-2 border-transparent -mb-[2px] transition-colors whitespace-nowrap"
                    data-tab="profile"
                >
                    名稱管理
                </button>
            </div>

            <!-- Tab Content: Bookmarks -->
            <section id="tab-bookmarks" class="tab-content">
                <div
                    class="bg-uu-light rounded-2xl p-8 border border-uu-sub/50 text-center min-h-[300px] flex flex-col items-center justify-center"
                >
                    <span
                        class="material-symbols-outlined text-4xl text-uu-sub mb-4"
                        >bookmark</span
                    >
                    <p class="text-uu-main/60 mb-2">您還沒有收藏任何文章</p>
                    <a
                        href="/posts"
                        class="text-sm font-bold text-uu-dark underline underline-offset-4 decoration-uu-sub hover:decoration-uu-main transition-all"
                        >去逛逛文章</a
                    >
                </div>
            </section>

            <!-- Tab Content: Comments -->
            <section id="tab-comments" class="tab-content hidden">
                <div
                    class="bg-uu-light rounded-2xl p-8 border border-uu-sub/50 text-center min-h-[300px] flex flex-col items-center justify-center"
                >
                    <span
                        class="material-symbols-outlined text-4xl text-uu-sub mb-4"
                        >chat_bubble</span
                    >
                    <p class="text-uu-main/60">您還沒有發表過留言</p>
                </div>
            </section>

            <!-- Tab Content: Profile -->
            <section id="tab-profile" class="tab-content hidden">
                <div
                    class="bg-uu-light rounded-2xl p-8 border border-uu-sub/50 max-w-xl mx-auto"
                >
                    <h3
                        class="font-bold text-lg mb-6 text-uu-dark border-b border-uu-sub/30 pb-2"
                    >
                        基本資料
                    </h3>

                    <div class="space-y-6">
                        <div>
                            <label
                                class="block text-xs font-bold tracking-widest text-uu-main/70 mb-2 uppercase"
                                >顯示名稱</label
                            >
                            <input
                                type="text"
                                id="display-name-input"
                                class="w-full bg-uu-base/50 border border-uu-sub rounded-lg px-4 py-3 text-uu-dark focus:outline-none focus:border-uu-main transition-colors"
                                placeholder="請輸入您的暱稱"
                            />
                            <p class="text-[10px] text-uu-main/40 mt-2">
                                這將是您留言時顯示的名稱
                            </p>
                        </div>

                        <div class="text-right">
                            <button
                                class="bg-uu-main text-white text-sm font-bold py-3 px-8 rounded-full hover:bg-uu-dark transition-colors shadow-sm tracking-wider"
                            >
                                保存變更
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <Footer />
</Layout>

<script>
    import { auth, googleProvider } from "../../lib/firebase";
    import {
        signInWithPopup,
        signOut,
        onAuthStateChanged,
    } from "firebase/auth";

    const loginBtn = document.getElementById("google-login-btn");
    const logoutBtn = document.getElementById("logout-btn");
    const loadingSection = document.getElementById("auth-loading");
    const loginSection = document.getElementById("login-section");
    const userDashboard = document.getElementById("user-dashboard");

    const userAvatar = document.getElementById("user-avatar");
    const userName = document.getElementById("user-name");
    const userEmail = document.getElementById("user-email");

    // Tab Elements
    const tabBtns = document.querySelectorAll(".tab-btn");
    const tabContents = document.querySelectorAll(".tab-content");

    // Login
    if (loginBtn) {
        loginBtn.addEventListener("click", async () => {
            try {
                await signInWithPopup(auth, googleProvider);
            } catch (error) {
                console.error("Login failed:", error);
                alert("登入失敗，請稍後再試。");
            }
        });
    }

    // Logout
    if (logoutBtn) {
        logoutBtn.addEventListener("click", async () => {
            try {
                await signOut(auth);
                window.location.reload();
            } catch (error) {
                console.error("Logout failed:", error);
            }
        });
    }

    // Auth State Listener
    onAuthStateChanged(auth, (user) => {
        loadingSection?.classList.add("hidden");

        if (user) {
            console.log("User logged in:", user.email);

            // Admin Check
            if (user.email === "jing180804@gmail.com") {
                // user asks to "enter admin page" if admin.
                // Assuming /admin path.
                window.location.href = "/admin";
                return;
            }

            // Fill User Data
            if (userName) userName.textContent = user.displayName || "User";
            if (userEmail) userEmail.textContent = user.email;

            if (userAvatar && user.photoURL) {
                userAvatar.innerHTML = `<img src="${user.photoURL}" alt="avatar" class="w-full h-full object-cover">`;
            }

            // Show Dashboard
            userDashboard?.classList.remove("hidden");
            loginSection?.classList.add("hidden");
        } else {
            // Show Login
            loginSection?.classList.remove("hidden");
            userDashboard?.classList.add("hidden");
        }
    });

    // Tab Logic
    tabBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            // Remove active from all buttons
            tabBtns.forEach((b) => {
                b.classList.remove("active", "text-uu-dark", "border-uu-main");
                b.classList.add("text-uu-main/50", "border-transparent");
            });

            // Add active to clicked
            btn.classList.add("active", "text-uu-dark", "border-uu-main");
            btn.classList.remove("text-uu-main/50", "border-transparent");

            // Hide all contents
            tabContents.forEach((c) => c.classList.add("hidden"));

            // Show target content
            const tabId = btn.getAttribute("data-tab");
            const targetContent = document.getElementById(`tab-${tabId}`);
            targetContent?.classList.remove("hidden");
        });
    });
</script>
