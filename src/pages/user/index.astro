---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PrimaryButton from "../../components/PrimaryButton.astro";

// Fetch all posts to have their metadata available for bookmarks
const allPosts = await getCollection("posts");
const postsJson = allPosts.map((post: any) => ({
    id: post.id,
    title: post.data.title,
    description: post.data.description,
    pubDate: post.data.pubDate,
    heroImage: post.data.heroImage,
    category: post.data.category,
    tags: post.data.tags,
}));
---

<Layout title="User Dashboard | UU MEMO">
    <Header />

    <main
        class="max-w-6xl mx-auto px-6 py-12 md:py-20 min-h-[85vh] flex flex-col w-full self-stretch"
    >
        <!-- Loading State -->
        <div
            id="auth-loading"
            class="fixed inset-0 z-[60] bg-uu-base flex flex-col items-center justify-center space-y-4 transition-opacity duration-300"
        >
            <div
                class="w-12 h-12 border-4 border-uu-sub border-t-uu-main rounded-full animate-spin"
            >
            </div>
            <p class="text-uu-main/60 tracking-widest text-sm font-medium">
                CONNECTING...
            </p>
        </div>

        <!-- Login Section -->
        <div
            id="login-section"
            class="hidden opacity-0 translate-y-4 transition-all duration-500 max-w-md mx-auto w-full bg-uu-light p-10 rounded-2xl shadow-sm border border-uu-sub text-center my-auto"
        >
            <h2 class="text-2xl font-bold mb-4 font-logo text-uu-dark">
                開啟你的專屬 MEMO
            </h2>
            <p class="text-uu-main/60 mb-8 text-sm leading-relaxed">
                把那些轉瞬即逝的思考，留在這個安靜的角落。
            </p>

            <button
                id="google-login-btn"
                class="w-full bg-white border border-uu-sub hover:border-uu-main hover:bg-uu-base/30 text-uu-dark font-medium py-3.5 px-4 rounded-xl transition-all duration-300 flex items-center justify-center gap-3 group mb-6 active:scale-[0.98]"
            >
                <svg
                    class="w-5 h-5 group-hover:scale-110 transition-transform"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                        fill="#4285F4"></path>
                    <path
                        d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                        fill="#34A853"></path>
                    <path
                        d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                        fill="#FBBC05"></path>
                    <path
                        d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                        fill="#EA4335"></path>
                </svg>
                <span>使用 Google 帳戶繼續</span>
            </button>

            <div
                class="flex items-center justify-center gap-1.5 text-uu-main/40 hover:text-uu-main/60 transition-colors"
            >
                <span class="material-symbols-outlined text-sm">info</span>
                <a
                    href="/privacy"
                    class="text-[11px] underline underline-offset-2 decoration-uu-sub/50"
                    >隱私權條款</a
                >
            </div>
        </div>

        <!-- User Dashboard -->
        <div
            id="user-dashboard"
            class="hidden opacity-0 transition-opacity duration-500 dashboard-layout w-full"
        >
            <!-- LEFT COLUMN -->
            <aside class="dashboard-sidebar">
                <div
                    class="bg-uu-light p-8 rounded-2xl border border-uu-sub/30 shadow-sm flex flex-col items-center text-center"
                >
                    <div
                        id="user-avatar"
                        class="w-20 h-20 bg-uu-sub/50 rounded-full flex items-center justify-center overflow-hidden border-4 border-white shadow-sm mb-4 shrink-0"
                    >
                        <span
                            class="material-symbols-outlined text-uu-light text-4xl"
                            >person</span
                        >
                    </div>

                    <div class="w-full">
                        <h1
                            class="text-lg font-bold font-logo text-uu-dark mb-0.5 truncate px-2"
                        >
                            <span id="user-name">User</span>
                        </h1>
                        <p
                            id="user-email"
                            class="text-[10px] text-uu-main/60 tracking-wider font-mono truncate px-2"
                        >
                        </p>
                    </div>

                    <div
                        class="w-8 h-0.5 bg-uu-sub/20 rounded-full my-6 shrink-0"
                    >
                    </div>

                    <nav class="w-full flex flex-col gap-1.5">
                        <button
                            class="tab-btn active group flex items-center gap-3.5 px-4 py-3 rounded-xl transition-all w-full bg-uu-main text-white shadow-sm text-left"
                            data-tab="bookmarks"
                        >
                            <span class="material-symbols-outlined text-xl"
                                >bookmark</span
                            >
                            <span
                                class="text-sm font-bold tracking-widest leading-none"
                                >我的書籤</span
                            >
                        </button>
                        <button
                            class="tab-btn group flex items-center gap-3.5 px-4 py-3 rounded-xl transition-all w-full text-uu-main/60 hover:bg-uu-sub/10 hover:text-uu-main text-left"
                            data-tab="comments"
                        >
                            <span class="material-symbols-outlined text-xl"
                                >chat_bubble</span
                            >
                            <span
                                class="text-sm font-bold tracking-widest leading-none"
                                >留言管理</span
                            >
                        </button>
                        <button
                            class="tab-btn group flex items-center gap-3.5 px-4 py-3 rounded-xl transition-all w-full text-uu-main/60 hover:bg-uu-sub/10 hover:text-uu-main text-left"
                            data-tab="profile"
                        >
                            <span class="material-symbols-outlined text-xl"
                                >settings</span
                            >
                            <span
                                class="text-sm font-bold tracking-widest leading-none"
                                >名稱設定</span
                            >
                        </button>

                        <div class="h-2"></div>

                        <button
                            id="logout-btn"
                            class="w-full flex items-center gap-3.5 px-4 py-3 rounded-xl text-uu-main/40 hover:text-uu-main hover:bg-uu-sub/10 transition-all group border border-transparent hover:border-uu-sub/20 text-left mt-2"
                        >
                            <span
                                class="material-symbols-outlined text-xl group-hover:rotate-12 transition-transform"
                                >logout</span
                            >
                            <span
                                class="text-sm font-bold tracking-widest leading-none"
                                >登出帳號</span
                            >
                        </button>
                    </nav>
                </div>
            </aside>

            <!-- RIGHT COLUMN -->
            <div
                class="dashboard-content bg-uu-light rounded-2xl border border-uu-sub/30 shadow-sm min-h-[580px] flex flex-col overflow-hidden"
            >
                <!-- Bookmarks -->
                <section
                    id="tab-bookmarks"
                    class="tab-content w-full flex-1 p-8"
                    data-posts={JSON.stringify(postsJson)}
                >
                    <div
                        id="dashboard-bookmarks-loading"
                        class="py-20 text-center"
                    >
                        <div
                            class="w-10 h-10 border-4 border-uu-sub border-t-uu-main rounded-full animate-spin mx-auto mb-4"
                        >
                        </div>
                        <p class="text-uu-main/60 text-sm tracking-widest">
                            LOADING BOOKMARKS...
                        </p>
                    </div>

                    <div
                        id="dashboard-bookmarks-empty"
                        class="hidden py-20 text-center"
                    >
                        <div
                            class="w-16 h-16 bg-uu-sub/10 rounded-full flex items-center justify-center mb-6 mx-auto"
                        >
                            <span
                                class="material-symbols-outlined text-3xl text-uu-sub"
                                >bookmark_border</span
                            >
                        </div>
                        <h3 class="text-xl font-bold text-uu-dark mb-3">
                            安靜的收藏夾
                        </h3>
                        <p
                            class="text-uu-main/60 mb-8 max-w-xs mx-auto text-sm leading-relaxed"
                        >
                            在這裡，你可以找回那些曾經觸動過你的生活碎片。
                        </p>
                        <a
                            href="/posts"
                            class="btn-text text-sm font-bold tracking-widest"
                            >去逛逛文章 →</a
                        >
                    </div>

                    <div
                        id="dashboard-bookmarks-grid"
                        class="hidden grid grid-cols-1 lg:grid-cols-2 gap-6"
                    >
                        <!-- Dynamic Content -->
                    </div>
                </section>

                <!-- Comments -->
                <section
                    id="tab-comments"
                    class="tab-content hidden w-full flex-1 p-8"
                >
                    <div
                        id="dashboard-comments-loading"
                        class="py-20 text-center"
                    >
                        <div
                            class="w-10 h-10 border-4 border-uu-sub border-t-uu-main rounded-full animate-spin mx-auto mb-4"
                        >
                        </div>
                        <p class="text-uu-main/60 text-sm tracking-widest">
                            LOADING COMMENTS...
                        </p>
                    </div>

                    <div
                        id="dashboard-comments-empty"
                        class="hidden py-20 text-center"
                    >
                        <div
                            class="w-16 h-16 bg-uu-sub/10 rounded-full flex items-center justify-center mb-6 mx-auto"
                        >
                            <span
                                class="material-symbols-outlined text-3xl text-uu-sub"
                                >forum</span
                            >
                        </div>
                        <h3 class="text-xl font-bold text-uu-dark mb-3">
                            無欲無求
                        </h3>
                        <p
                            class="text-uu-main/60 mb-8 max-w-xs mx-auto text-sm leading-relaxed"
                        >
                            在這裡，你會看見你與這個角落的所有對話軌跡。
                        </p>
                    </div>

                    <div id="dashboard-comments-list" class="hidden space-y-6">
                        <!-- Dynamic Content -->
                    </div>
                </section>

                <!-- Profile -->
                <section
                    id="tab-profile"
                    class="tab-content hidden w-full flex-1 flex flex-col p-10"
                >
                    <div
                        class="flex items-center justify-between mb-8 pb-6 border-b border-uu-sub/20"
                    >
                        <div class="flex items-center gap-3.5">
                            <div
                                class="w-10 h-10 rounded-full bg-uu-sub/10 flex items-center justify-center text-uu-main"
                            >
                                <span class="material-symbols-outlined"
                                    >badge</span
                                >
                            </div>
                            <h3 class="font-bold text-xl text-uu-dark">
                                個人帳號設定
                            </h3>
                        </div>
                    </div>

                    <div class="space-y-10">
                        <!-- Module 1: Nickname Settings -->
                        <div
                            class="bg-white border border-uu-sub/20 rounded-2xl p-8 space-y-8 shadow-sm"
                        >
                            <div
                                class="flex items-center gap-3 pb-4 border-b border-uu-sub/10"
                            >
                                <div
                                    class="w-8 h-8 rounded-lg bg-uu-main/5 flex items-center justify-center"
                                >
                                    <span
                                        class="material-symbols-outlined text-uu-main text-sm"
                                        >edit_note</span
                                    >
                                </div>
                                <h4
                                    class="text-xs font-black text-uu-dark uppercase tracking-widest"
                                >
                                    基本資料設定 (Profile Settings)
                                </h4>
                            </div>

                            <div class="space-y-6">
                                <div>
                                    <div class="space-y-3">
                                        <label
                                            class="text-[10px] font-black text-uu-main/40 uppercase tracking-widest block"
                                            >Display Nickname (顯示名稱)</label
                                        >
                                        <input
                                            type="text"
                                            id="display-name-input"
                                            class="w-full bg-uu-base/20 border border-uu-sub/30 rounded-xl px-5 py-4 text-uu-dark focus:outline-none focus:border-uu-main focus:bg-white transition-all shadow-inner text-base"
                                            placeholder="您的顯示名稱"
                                        />
                                        <p
                                            class="text-[10px] text-uu-main/40 italic mt-2"
                                        >
                                            ※
                                            此名稱將公開顯示於您在網站上的所有留言中
                                        </p>
                                    </div>
                                </div>

                                <!-- Google Original Data Reset -->
                                <div class="pt-4 border-t border-uu-sub/10">
                                    <button
                                        id="reset-to-google-btn"
                                        class="group flex items-center gap-3 px-5 py-3 bg-uu-base/10 hover:bg-uu-sub/10 border border-uu-sub/20 rounded-xl transition-all text-left w-full"
                                    >
                                        <div
                                            class="w-10 h-10 rounded-lg bg-white border border-uu-sub/10 flex items-center justify-center group-hover:border-uu-main transition-colors"
                                        >
                                            <span
                                                class="material-symbols-outlined text-uu-main text-xl"
                                                >account_circle</span
                                            >
                                        </div>
                                        <div class="flex-1">
                                            <p
                                                class="text-xs font-bold text-uu-dark group-hover:text-uu-main transition-colors"
                                            >
                                                使用 Google 帳號原始資料
                                            </p>
                                            <p
                                                class="text-[10px] text-uu-main/40 mt-0.5"
                                            >
                                                將名稱與頭像恢復為 Google
                                                帳號預設值
                                            </p>
                                        </div>
                                        <span
                                            class="material-symbols-outlined text-uu-main/30 group-hover:text-uu-main transition-colors"
                                            >refresh</span
                                        >
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Module 2: Avatar Selection -->
                        <div
                            class="bg-white border border-uu-sub/20 rounded-2xl p-8 space-y-8 shadow-sm"
                        >
                            <div
                                class="flex items-center gap-3 pb-4 border-b border-uu-sub/10"
                            >
                                <div
                                    class="w-8 h-8 rounded-lg bg-uu-main/5 flex items-center justify-center"
                                >
                                    <span
                                        class="material-symbols-outlined text-uu-main text-sm"
                                        >mood</span
                                    >
                                </div>
                                <h4
                                    class="text-xs font-black text-uu-dark uppercase tracking-widest"
                                >
                                    虛擬頭像選擇 (Avatar Icon)
                                </h4>
                            </div>

                            <div class="space-y-6">
                                <p
                                    class="text-[11px] text-uu-main/60 leading-relaxed max-w-lg"
                                >
                                    從下方挑選一個與您心情契合的 Icon
                                    做為個人化頭像。
                                </p>

                                <div class="icon-grid" id="avatar-grid">
                                    {
                                        [
                                            "face",
                                            "cruelty_free",
                                            "potted_plant",
                                            "smart_toy",
                                            "auto_awesome",
                                            "palette",
                                            "rocket_launch",
                                            "local_florist",
                                            "bedroom_baby",
                                            "person",
                                            "favorite",
                                            "star",
                                            "pets",
                                            "eco",
                                            "nightlight",
                                        ].map((icon) => (
                                            <button
                                                class="avatar-option group transition-all duration-300 flex items-center justify-center"
                                                data-icon={icon}
                                            >
                                                <div class="icon-box w-full aspect-square rounded-2xl bg-uu-base/20 border border-uu-sub/10 flex items-center justify-center text-uu-main/40 group-hover:bg-uu-sub/10 group-hover:text-uu-main transition-all">
                                                    <span class="material-symbols-outlined icon-symbol">
                                                        {icon}
                                                    </span>
                                                </div>
                                            </button>
                                        ))
                                    }
                                </div>
                                <input
                                    type="hidden"
                                    id="selected-avatar-input"
                                />
                            </div>
                        </div>

                        <div class="pt-4 mt-4">
                            <PrimaryButton
                                id="profile-save-btn"
                                text="SAVE & UPDATE"
                                showLoader={true}
                                loaderId="profile-save-loader"
                            />
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <Footer />
</Layout>

<script>
    import { auth, googleProvider, db } from "../../lib/firebase";
    import {
        signInWithPopup,
        signOut,
        onAuthStateChanged,
    } from "firebase/auth";
    import {
        doc,
        getDoc,
        setDoc,
        serverTimestamp,
        collection,
        getDocs,
        query,
        orderBy,
        where,
    } from "firebase/firestore";

    function initUserDashboard() {
        const loginBtn = document.getElementById("google-login-btn");
        const logoutBtn = document.getElementById("logout-btn");
        const loadingSection = document.getElementById("auth-loading");
        const loginSection = document.getElementById("login-section");
        const userDashboard = document.getElementById("user-dashboard");

        const userAvatar = document.getElementById("user-avatar");
        const userName = document.getElementById("user-name");
        const userEmail = document.getElementById("user-email");

        const tabBtns = document.querySelectorAll(".tab-btn");
        const tabContents = document.querySelectorAll(".tab-content");

        const profileSaveBtn = document.getElementById("profile-save-btn");
        const profileSaveLoader = document.getElementById(
            "profile-save-loader"
        );
        const displayNameInput = document.getElementById(
            "display-name-input"
        ) as HTMLInputElement;
        const selectedAvatarInput = document.getElementById(
            "selected-avatar-input"
        ) as HTMLInputElement;

        const avatarOptions = document.querySelectorAll(".avatar-option");

        if (loginBtn) {
            loginBtn.onclick = async () => {
                try {
                    await signInWithPopup(auth, googleProvider);
                } catch (e) {
                    console.error("Login failed:", e);
                }
            };
        }

        if (logoutBtn) {
            logoutBtn.onclick = async () => {
                try {
                    await signOut(auth);
                    window.location.href = "/";
                } catch (e) {
                    console.error("Logout failed:", e);
                }
            };
        }

        onAuthStateChanged(auth, async (user) => {
            if (user) {
                // Admin redirect
                if (user.email === "uu-memo@outlook.com") {
                    window.location.href = "/admin";
                    return;
                }

                if (userName) userName.textContent = user.displayName;
                if (userEmail) userEmail.textContent = user.email;

                // Load custom profile data
                try {
                    const userDoc = await getDoc(doc(db, "users", user.uid));
                    if (userDoc.exists()) {
                        const data = userDoc.data();
                        if (data.nickname && userName)
                            userName.textContent = data.nickname;
                        if (displayNameInput)
                            displayNameInput.value =
                                data.nickname || user.displayName || "";
                        if (data.avatar_icon) {
                            if (userAvatar) {
                                userAvatar.innerHTML = `<span class="material-symbols-outlined text-4xl text-uu-main">${data.avatar_icon}</span>`;
                            }
                            if (selectedAvatarInput)
                                selectedAvatarInput.value = data.avatar_icon;

                            // Highlight selected avatar
                            avatarOptions.forEach((opt) => {
                                if (
                                    opt.getAttribute("data-icon") ===
                                    data.avatar_icon
                                ) {
                                    opt.querySelector(
                                        ".icon-box"
                                    )?.classList.add(
                                        "bg-uu-sub/40",
                                        "border-uu-main",
                                        "text-uu-main"
                                    );
                                }
                            });
                        } else if (user.photoURL && userAvatar) {
                            userAvatar.innerHTML = `<img src="${user.photoURL}" class="w-full h-full object-cover" />`;
                        }
                    } else if (user.photoURL && userAvatar) {
                        userAvatar.innerHTML = `<img src="${user.photoURL}" class="w-full h-full object-cover" />`;
                        if (displayNameInput)
                            displayNameInput.value = user.displayName || "";
                    }
                } catch (e) {
                    console.error("Error fetching user profile:", e);
                }

                loadingSection?.classList.add("opacity-0");
                setTimeout(() => loadingSection?.classList.add("hidden"), 300);
                userDashboard?.classList.remove("hidden");
                setTimeout(
                    () => userDashboard?.classList.add("opacity-100"),
                    50
                );
                loginSection?.classList.add("hidden");

                // Bookmarks Logic
                const bookmarksTab = document.getElementById("tab-bookmarks");
                const bookmarksGrid = document.getElementById(
                    "dashboard-bookmarks-grid"
                );
                const bookmarksLoading = document.getElementById(
                    "dashboard-bookmarks-loading"
                );
                const bookmarksEmpty = document.getElementById(
                    "dashboard-bookmarks-empty"
                );
                const postsJson = JSON.parse(
                    bookmarksTab?.getAttribute("data-posts") || "[]"
                );

                if (bookmarksGrid && bookmarksLoading && bookmarksEmpty) {
                    try {
                        const q = query(
                            collection(db, "users", user.uid, "bookmarks"),
                            orderBy("timestamp", "desc")
                        );
                        const querySnapshot = await getDocs(q);
                        const bookmarkedIds = querySnapshot.docs.map(
                            (doc) => doc.id
                        );

                        if (bookmarkedIds.length === 0) {
                            bookmarksLoading.classList.add("hidden");
                            bookmarksEmpty.classList.remove("hidden");
                        } else {
                            const bookmarkedPosts = postsJson.filter((p: any) =>
                                bookmarkedIds.includes(p.id)
                            );
                            bookmarkedPosts.sort(
                                (a: any, b: any) =>
                                    bookmarkedIds.indexOf(a.id) -
                                    bookmarkedIds.indexOf(b.id)
                            );

                            bookmarksGrid.innerHTML = bookmarkedPosts
                                .map(
                                    (post: any) => `
                                <article class="bg-white rounded-xl overflow-hidden border border-uu-sub/30 group hover:shadow-md transition-all flex flex-col h-full">
                                    <a href="/posts/${
                                        post.id
                                    }" class="aspect-video bg-uu-sub/20 relative overflow-hidden shrink-0 block">
                                        ${
                                            post.heroImage
                                                ? `<img src="${post.heroImage}" alt="" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />`
                                                : `<div class="w-full h-full flex items-center justify-center text-uu-main/20"><span class="material-symbols-outlined text-4xl">image</span></div>`
                                        }
                                    </a>
                                    <div class="p-5 flex flex-col flex-1">
                                        <div class="text-[9px] tracking-widest text-uu-main/40 mb-2 font-black uppercase flex justify-between">
                                            <span>${new Date(
                                                post.pubDate
                                            ).toLocaleDateString(
                                                "zh-TW"
                                            )}</span>
                                            <span>${
                                                Array.isArray(post.category)
                                                    ? post.category[0]
                                                    : post.category || "LIFE"
                                            }</span>
                                        </div>
                                        <h4 class="text-sm font-bold mb-2 group-hover:text-uu-dark transition-colors line-clamp-1">
                                            <a href="/posts/${post.id}">${
                                        post.title
                                    }</a>
                                        </h4>
                                        <p class="text-[11px] opacity-60 line-clamp-2 leading-relaxed mb-4 flex-1">
                                            ${post.description}
                                        </p>
                                        <a href="/posts/${
                                            post.id
                                        }" class="text-[10px] font-black text-uu-main hover:text-uu-dark transition-colors flex items-center gap-1 uppercase tracking-tighter">
                                            閱讀全文
                                            <span class="material-symbols-outlined text-xs">arrow_forward</span>
                                        </a>
                                    </div>
                                </article>
                            `
                                )
                                .join("");

                            bookmarksLoading.classList.add("hidden");
                            bookmarksGrid.classList.remove("hidden");
                        }
                    } catch (e) {
                        console.error("Dashboard bookmarks error:", e);
                        bookmarksLoading.classList.add("hidden");
                        bookmarksEmpty.classList.remove("hidden");
                    }
                }

                // Comments Logic
                const commentsList = document.getElementById(
                    "dashboard-comments-list"
                );
                const commentsLoading = document.getElementById(
                    "dashboard-comments-loading"
                );
                const commentsEmpty = document.getElementById(
                    "dashboard-comments-empty"
                );

                if (commentsList && commentsLoading && commentsEmpty) {
                    try {
                        const q = query(
                            collection(db, "comments"),
                            where("author_uid", "==", user.uid)
                        );
                        const querySnapshot = await getDocs(q);

                        if (querySnapshot.empty) {
                            commentsLoading.classList.add("hidden");
                            commentsEmpty.classList.remove("hidden");
                        } else {
                            const userComments = querySnapshot.docs.map((doc) => ({
                                id: doc.id,
                                ...doc.data()
                            } as any));

                            // Client-side sort to avoid requiring a composite index
                            userComments.sort((a, b) => (b.created_at?.seconds || 0) - (a.created_at?.seconds || 0));

                            commentsList.innerHTML = userComments
                                .map((c) => {
                                    const date =
                                        c.created_at
                                            ?.toDate()
                                            .toLocaleDateString("zh-TW") ||
                                        "Just now";
                                    const post = postsJson.find(
                                        (p: any) => p.id === c.post_slug
                                    );
                                    const postTitle = post
                                        ? post.title
                                        : "未知文章";

                                    return `
                                    <div class="bg-white p-6 rounded-2xl border border-uu-sub/20 shadow-sm hover:border-uu-main/30 transition-all group text-left">
                                        <div class="flex justify-between items-start mb-4">
                                            <div class="flex items-center gap-2">
                                                <span class="text-[10px] font-black text-uu-main/40 uppercase tracking-widest">Post / 發表於</span>
                                                <a href="/posts/${c.post_slug}" class="text-[10px] font-bold text-uu-main hover:text-uu-dark hover:underline underline-offset-2 transition-all line-clamp-1">${postTitle}</a>
                                            </div>
                                            <span class="text-[10px] font-mono text-uu-main/30">${date}</span>
                                        </div>
                                        <p class="text-sm text-uu-dark/80 leading-relaxed line-clamp-3 mb-0">
                                            ${c.content}
                                        </p>
                                    </div>
                                `;
                                })
                                .join("");

                            commentsLoading.classList.add("hidden");
                            commentsList.classList.remove("hidden");
                        }
                    } catch (e) {
                        console.error("Dashboard comments error:", e);
                        commentsLoading.classList.add("hidden");
                        commentsEmpty.classList.remove("hidden");
                    }
                }
            } else {
                loadingSection?.classList.add("opacity-0");
                setTimeout(() => loadingSection?.classList.add("hidden"), 300);
                loginSection?.classList.remove("hidden");
                setTimeout(() => {
                    loginSection?.classList.add("opacity-100");
                    loginSection?.classList.remove("translate-y-4");
                }, 50);
                userDashboard?.classList.add("hidden");
            }
        });

        profileSaveBtn?.addEventListener("click", async () => {
            const user = auth.currentUser;
            if (!user || !displayNameInput || !profileSaveLoader) return;
            profileSaveLoader.classList.remove("hidden");
            try {
                await setDoc(
                    doc(db, "users", user.uid),
                    {
                        nickname: displayNameInput.value,
                        avatar_icon: selectedAvatarInput?.value || null,
                        updated_at: serverTimestamp(),
                    },
                    { merge: true }
                );
                // Trigger page reload on successful save to refresh all data on page immediately
                window.location.reload();
            } catch (e) {
                console.error(e);
                alert("更新失敗");
                profileSaveLoader.classList.add("hidden");
            }
        });

        tabBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                tabBtns.forEach((b) => {
                    b.classList.remove(
                        "active",
                        "bg-uu-main",
                        "text-white",
                        "shadow-sm"
                    );
                    b.classList.add(
                        "text-uu-main/60",
                        "hover:bg-uu-sub/10",
                        "hover:text-uu-main"
                    );
                });
                btn.classList.add(
                    "active",
                    "bg-uu-main",
                    "text-white",
                    "shadow-sm"
                );
                btn.classList.remove(
                    "text-uu-main/60",
                    "hover:bg-uu-sub/10",
                    "hover:text-uu-main"
                );
                tabContents.forEach((c) => c.classList.add("hidden"));
                const tabId = btn.getAttribute("data-tab");
                const targetContent = document.getElementById(`tab-${tabId}`);
                if (targetContent) targetContent.classList.remove("hidden");
            });
        });

        avatarOptions.forEach((opt) => {
            opt.addEventListener("click", () => {
                avatarOptions.forEach((o) =>
                    o
                        .querySelector(".icon-box")
                        ?.classList.remove(
                            "bg-uu-sub/40",
                            "border-uu-main",
                            "text-uu-main"
                        )
                );
                opt.querySelector(".icon-box")?.classList.add(
                    "bg-uu-sub/40",
                    "border-uu-main",
                    "text-uu-main"
                );
                const icon = opt.getAttribute("data-icon");
                if (selectedAvatarInput && icon) {
                    selectedAvatarInput.value = icon;
                    // Live preview update
                    if (userAvatar) {
                        userAvatar.innerHTML = `<span class="material-symbols-outlined text-4xl text-uu-light">${icon}</span>`;
                    }
                }
            });
        });

        displayNameInput?.addEventListener("input", (e) => {
            if (userName) {
                userName.textContent =
                    (e.target as HTMLInputElement).value || "User";
            }
        });
    }

    document.addEventListener("astro:page-load", initUserDashboard);
</script>

