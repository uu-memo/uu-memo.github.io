---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
	const posts = await getCollection('posts');
    // Sort posts by date to ensure correct prev/next logic
    const sortedPosts = posts.sort((a, b) => 
        (b.data.pubDate?.valueOf() || 0) - (a.data.pubDate?.valueOf() || 0)
    );

	return sortedPosts.map((post, i) => ({
		params: { slug: post.id },
		props: { 
            post,
            prevPost: i + 1 < sortedPosts.length ? sortedPosts[i + 1] : null,
            nextPost: i > 0 ? sortedPosts[i - 1] : null,
        },
	}));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await render(post);
const tags = post.data.tags || [];

// Helper to handle category array or string
const categories = Array.isArray(post.data.category) 
    ? post.data.category 
    : post.data.category ? [post.data.category] : ['未分類'];
---

<Layout title={post.data.title}>
    <Header />
    <main class="max-w-4xl mx-auto px-6 py-12 w-full self-stretch">
        <article class="bg-uu-light rounded-2xl p-8 md:p-12 shadow-sm border border-uu-sub">
            <!-- Article Header -->
            <header class="mb-12 border-b border-uu-sub pb-8">
                <div class="text-xs font-mono tracking-widest text-uu-main/60 mb-4 flex flex-wrap gap-2">
                    <span>{post.data.pubDate.toLocaleDateString('zh-TW')}</span>
                    <span>/</span>
                    {categories.map((cat: string, index: number) => (
                        <>
                            <a href={`/posts?q=${cat}`} class="hover:text-uu-main hover:underline transition-colors">{cat}</a>
                            {index < categories.length - 1 && <span>,</span>}
                        </>
                    ))}
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-uu-main mb-6 leading-tight">
                    {post.data.title}
                </h1>
                {post.data.heroImage && (
                    <div class="mt-8 rounded-xl overflow-hidden aspect-video bg-uu-sub/20 relative">
                         <!-- Placeholder or actual image -->
                         <img src={post.data.heroImage} alt="" class="w-full h-full object-cover opacity-80" onerror="this.style.display='none'" />
                         <div class="absolute inset-0 flex items-center justify-center text-uu-main/20 -z-10">
                            <span class="material-symbols-outlined text-6xl">image</span>
                         </div>
                    </div>
                )}
            </header>

            <!-- Content -->
            <div class="prose prose-stone max-w-none 
                prose-headings:text-uu-main prose-headings:font-bold
                prose-p:text-uu-main/80 prose-p:leading-relaxed
                prose-a:text-uu-dark prose-a:font-medium prose-a:underline hover:prose-a:text-uu-main
                prose-strong:text-uu-main prose-strong:font-bold
                prose-blockquote:border-uu-sub prose-blockquote:bg-uu-sub/10 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:rounded-r-lg prose-blockquote:not-italic
                prose-code:text-uu-dark prose-code:bg-uu-sub/20 prose-code:px-1 prose-code:rounded prose-code:before:content-none prose-code:after:content-none
                prose-pre:bg-[#f5f0e7] prose-pre:text-uu-main prose-pre:border prose-pre:border-uu-sub
                prose-li:text-uu-main/80
                prose-img:rounded-xl">
                <Content />
            </div>

            <!-- Tags Section -->
            {tags.length > 0 && (
                <div class="mt-12 pt-8 border-t border-uu-sub flex flex-wrap gap-3">
                    {tags.map((tag: string) => (
                        <a href={`/posts?tag=${tag}`} class="px-4 py-2 bg-uu-sub/20 hover:bg-uu-main hover:text-white rounded-lg text-sm transition-colors cursor-pointer">
                            #{tag}
                        </a>
                    ))}
                </div>
            )}

            <!-- Post Actions (Bookmark, Share, Copy Link) -->
            <div class="mt-8 flex justify-end gap-2">
                <button 
                    id="bookmark-btn" 
                    class="w-10 h-10 flex items-center justify-center rounded-full text-uu-main/60 hover:bg-uu-sub/20 hover:text-uu-main transition-colors" 
                    title="收藏文章"
                    data-post-id={post.id}
                    data-post-title={post.data.title}
                >
                    <span class="material-symbols-outlined">bookmark_border</span>
                </button>
                <button 
                    id="share-btn" 
                    class="w-10 h-10 flex items-center justify-center rounded-full text-uu-main/60 hover:bg-uu-sub/20 hover:text-uu-main transition-colors" 
                    title="分享文章"
                >
                    <span class="material-symbols-outlined">share</span>
                </button>
                <button 
                    id="copy-link-btn" 
                    class="w-10 h-10 flex items-center justify-center rounded-full text-uu-main/60 hover:bg-uu-sub/20 hover:text-uu-main transition-colors" 
                    title="複製連結"
                >
                    <span class="material-symbols-outlined">link</span>
                </button>
            </div>
        </article>

        <!-- Prev/Next Navigation -->
        <nav class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-6">
            {prevPost ? (
                <a href={`/posts/${prevPost.id}`} class="group flex flex-col p-6 bg-uu-light rounded-2xl border border-uu-sub hover:shadow-md transition-shadow">
                    <span class="text-xs text-uu-main/50 mb-2 flex items-center gap-1">
                        <span class="material-symbols-outlined text-sm">arrow_back</span>
                        上一篇
                    </span>
                    <span class="font-bold text-uu-main truncate group-hover:text-uu-dark transition-colors block w-full">{prevPost.data.title}</span>
                </a>
            ) : (
                <div class="hidden md:block"></div>
            )}

            {nextPost ? (
                <a href={`/posts/${nextPost.id}`} class="group flex flex-col p-6 bg-uu-light rounded-2xl border border-uu-sub hover:shadow-md transition-shadow text-right items-end">
                    <span class="text-xs text-uu-main/50 mb-2 flex items-center gap-1">
                        下一篇
                        <span class="material-symbols-outlined text-sm">arrow_forward</span>
                    </span>
                    <span class="font-bold text-uu-main truncate group-hover:text-uu-dark transition-colors block w-full">{nextPost.data.title}</span>
                </a>
            ) : (
                <div class="hidden md:block"></div>
            )}
        </nav>

        <!-- Comments Section Placeholder -->
        <section class="mt-16 max-w-4xl mx-auto">
            <h3 class="text-xl font-bold mb-8 flex items-center gap-4">
                <span>留言</span>
                <span class="text-sm font-normal opacity-50 bg-uu-sub/30 px-2 py-1 rounded-full">0</span>
            </h3>
            
            <div class="bg-uu-light rounded-2xl p-8 border border-uu-sub text-center py-12">
                <span class="material-symbols-outlined text-4xl text-uu-sub mb-4">chat_bubble_outline</span>
                <p class="text-sm opacity-60 mb-6">還沒有留言，成為第一個留言的人吧！</p>
                <div class="flex flex-col gap-4 max-w-lg mx-auto">
                    <input type="text" placeholder="暱稱" class="bg-uu-base border border-uu-sub rounded-lg px-4 py-3 text-sm focus:outline-none focus:border-uu-main w-full">
                    <textarea placeholder="留言內容..." rows="4" class="bg-uu-base border border-uu-sub rounded-lg px-4 py-3 text-sm focus:outline-none focus:border-uu-main w-full resize-none"></textarea>
                    <button class="bg-uu-main text-white px-6 py-3 rounded-lg text-sm hover:bg-uu-dark transition-colors w-full font-medium active:scale-95 transform duration-100">送出留言</button>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<script>
    import { auth, db } from "../../lib/firebase";
    import { onAuthStateChanged } from "firebase/auth";
    import { doc, getDoc, setDoc, deleteDoc, serverTimestamp } from "firebase/firestore";

    let authUnsubscribe: any = null;

    function initArticleActions() {
        const bookmarkBtn = document.getElementById('bookmark-btn');
        const shareBtn = document.getElementById('share-btn');
        const copyLinkBtn = document.getElementById('copy-link-btn');
        const postId = bookmarkBtn?.getAttribute('data-post-id');
        const postTitle = bookmarkBtn?.getAttribute('data-post-title');

        console.log(`[Init] Article Actions for: ${postId}`);

        if (!bookmarkBtn && !shareBtn && !copyLinkBtn) return;

        async function copyToClipboard(text: string) {
            if (navigator.clipboard && window.isSecureContext) {
                try {
                    await navigator.clipboard.writeText(text);
                    alert('連結已複製到剪貼簿！');
                } catch (err) {
                    console.error('Copy failed:', err);
                    fallbackCopyToClipboard(text);
                }
            } else {
                fallbackCopyToClipboard(text);
            }
        }

        function fallbackCopyToClipboard(text: string) {
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.position = "fixed";
            textArea.style.left = "-999999px";
            textArea.style.top = "-999999px";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            try {
                document.execCommand('copy');
                alert('連結已複製到剪貼簿！');
            } catch (err) {
                console.error('Fallback Copy failed:', err);
                alert('複製失敗，請手動複製網址。');
            }
            document.body.removeChild(textArea);
        }

        function updateBookmarkUI(isBookmarked: boolean) {
            if (!bookmarkBtn) return;
            const icon = bookmarkBtn.querySelector('.material-symbols-outlined');
            console.log(`[Bookmark] Updating UI. Bookmarked: ${isBookmarked}`);
            
            if (isBookmarked) {
                bookmarkBtn.classList.add('is-bookmarked');
                if (icon) icon.textContent = 'bookmark';
            } else {
                bookmarkBtn.classList.remove('is-bookmarked');
                if (icon) icon.textContent = 'bookmark_border';
            }
        }

        // Clean up previous listener to prevent leaks and double-triggers
        if (authUnsubscribe) {
            authUnsubscribe();
            authUnsubscribe = null;
        }

        // Check initial bookmark status
        authUnsubscribe = onAuthStateChanged(auth, async (user) => {
            console.log("[Auth] State changed:", user ? `User ${user.uid}` : "No user");
            if (user && postId) {
                try {
                    const docRef = doc(db, "users", user.uid, "bookmarks", postId);
                    const docSnap = await getDoc(docRef);
                    console.log("[Bookmark] Checked status from DB:", docSnap.exists());
                    updateBookmarkUI(docSnap.exists());
                } catch (e) {
                    console.error("[Bookmark] Check failed:", e);
                }
            } else {
                updateBookmarkUI(false);
            }
        });

        // Use a flag to prevent multiple event listeners if initArticleActions runs multiple times
        // But since we are selecting the NEW DOM element on every page-load, we NEED to re-attach.
        // We just need to make sure the one we attach to is the current one.
        
        bookmarkBtn?.addEventListener('click', async (e) => {
            e.preventDefault();
            const user = auth.currentUser;
            console.log("[Bookmark] Button Clicked. Current user:", user ? user.uid : "None");
            
            if (!user) {
                alert('請先登入以使用收藏功能');
                window.location.href = '/user';
                return;
            }

            if (!postId) return;

            const docRef = doc(db, "users", user.uid, "bookmarks", postId);
            
            try {
                // Optimistic UI update
                const isCurrentlyBookmarked = bookmarkBtn.classList.contains('is-bookmarked');
                updateBookmarkUI(!isCurrentlyBookmarked);

                if (isCurrentlyBookmarked) {
                    await deleteDoc(docRef);
                    console.log("[Bookmark] Deleted success:", postId);
                } else {
                    await setDoc(docRef, {
                        title: postTitle,
                        id: postId,
                        timestamp: serverTimestamp()
                    });
                    console.log("[Bookmark] Added success:", postId);
                }
            } catch (e) {
                console.error("[Bookmark] Action failed:", e);
                // Revert on error
                const docSnap = await getDoc(docRef);
                updateBookmarkUI(docSnap.exists());
                alert("操作失敗，請稍後再試。");
            }
        });

        shareBtn?.addEventListener('click', async () => {
            if (navigator.share) {
                try {
                    await navigator.share({
                        title: document.title,
                        text: '分享這篇有趣的 UU MEMO 文章！',
                        url: window.location.href
                    });
                } catch (err) {
                    if ((err as Error).name !== 'AbortError') {
                        console.error('Share failed:', err);
                    }
                }
            } else {
                copyToClipboard(window.location.href);
            }
        });

        copyLinkBtn?.addEventListener('click', () => {
            copyToClipboard(window.location.href);
        });
    }

    // Run on every page load (initial and navigation)
    document.addEventListener('astro:page-load', () => {
        initArticleActions();
    });
</script>
