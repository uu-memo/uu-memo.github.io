rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 允許管理員 (您的信箱) 讀寫所有內容
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "uu-memo@outlook.com";
    }

    // 允許使用者讀寫自己的資料與書籤
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /bookmarks/{bookmarkId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // 允許一般訪客讀取 site_config (例如打賞設定)
    match /site_config/{document} {
      allow read: if true;
    }
    
    // 允許訪客在留言板寫入留言與讀取
    match /comments/{comment} {
      allow read, create: if true;
      allow update: if request.auth != null && request.auth.token.email == "uu-memo@outlook.com";
    }

    // 允許訪客提交聯絡訊息 (僅寫入)
    match /messages/{message} {
      allow create: if true;
    }
  }
}
