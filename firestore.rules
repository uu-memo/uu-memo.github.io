rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 允許管理員 (您的信箱) 讀寫所有內容
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "jing180804@gmail.com";
    }
    
    // 允許一般訪客讀取 site_config (例如打賞設定)
    match /site_config/{document} {
      allow read: if true;
    }
    
    // 允許訪客在留言板寫入留言與讀取（後續會再優化）
    match /comments/{comment} {
      allow read, create: if true;
      allow update: if true; // 允許更新已讀狀態或隱藏
    }
  }
}
